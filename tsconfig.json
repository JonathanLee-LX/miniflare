{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "webworker"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "miniflare": ["packages/miniflare/src"],
      "@miniflare/*": ["packages/*/src"],
      "test:@miniflare/*": ["packages/*/test"]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/test",
    "types"
  ]
}
